<!-- Contact Section -->
<section class="contact-section py-5">
  <div class="container py-5">
    <div class="row gy-4">
      <!-- Contact Info -->
      <div class="col-lg-4">
        <h3 class="mb-4">İletişim Bilgileri</h3>
        
        <div class="contact-info-box mb-4">
          <div class="d-flex align-items-center mb-3">
            <div class="icon-box me-3">
              <i class="fas fa-map-marker-alt text-primary"></i>
            </div>
            <div>
              <h5 class="mb-1">Adres</h5>
              <p class="mb-0">Maslak, Büyükdere Cad. No:255, 34398 Sarıyer/İstanbul</p>
            </div>
          </div>
        </div>
        
        <div class="contact-info-box mb-4">
          <div class="d-flex align-items-center mb-3">
            <div class="icon-box me-3">
              <i class="fas fa-phone text-primary"></i>
            </div>
            <div>
              <h5 class="mb-1">Telefon</h5>
              <p class="mb-0">+90 (555) 123 4567</p>
            </div>
          </div>
        </div>
        
        <div class="contact-info-box mb-4">
          <div class="d-flex align-items-center mb-3">
            <div class="icon-box me-3">
              <i class="fas fa-envelope text-primary"></i>
            </div>
            <div>
              <h5 class="mb-1">E-posta</h5>
              <p class="mb-0">info@zerodaysoftware.com</p>
            </div>
          </div>
        </div>
        
        <div class="contact-info-box">
          <div class="d-flex align-items-center mb-3">
            <div class="icon-box me-3">
              <i class="fas fa-clock text-primary"></i>
            </div>
            <div>
              <h5 class="mb-1">Çalışma Saatleri</h5>
              <p class="mb-0">Pazartesi - Cuma: 09:00 - 18:00</p>
            </div>
          </div>
        </div>
        
        <div class="social-links mt-4">
          <h5 class="mb-3">Sosyal Medya</h5>
          <div class="d-flex gap-3">
            <a href="#" class="text-primary fs-4"><i class="fab fa-facebook-f"></i></a>
            <a href="#" class="text-primary fs-4"><i class="fab fa-twitter"></i></a>
            <a href="#" class="text-primary fs-4"><i class="fab fa-instagram"></i></a>
            <a href="#" class="text-primary fs-4"><i class="fab fa-linkedin-in"></i></a>
          </div>
        </div>
      </div>
      
      <!-- Contact Form -->
      <div class="col-lg-8">
        <div class="contact-form shadow-sm">
          <h3 class="mb-4">Mesaj Gönderin</h3>
          
          <% if (typeof success !== 'undefined') { %>
            <div class="alert alert-success">
              <%= success %>
            </div>
          <% } %>
          
          <form id="contactForm" action="/contact" method="post">
            <div class="row g-3">
              <div class="col-md-6">
                <div class="form-floating mb-3">
                  <input type="text" class="form-control" id="name" name="name" placeholder="Adınız" required>
                  <label for="name">Adınız</label>
                  <div class="invalid-feedback">Lütfen adınızı girin.</div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-floating mb-3">
                  <input type="email" class="form-control" id="email" name="email" placeholder="E-posta Adresiniz" required>
                  <label for="email">E-posta Adresiniz</label>
                  <div class="invalid-feedback">Lütfen geçerli bir e-posta adresi girin.</div>
                </div>
              </div>
              <div class="col-12">
                <div class="form-floating mb-3">
                  <select class="form-select" id="subject" name="subject" required>
                    <option value="" selected disabled>Konu seçin</option>
                    <option value="Web Tasarım">Web Tasarım</option>
                    <option value="Özel Yazılım">Özel Yazılım</option>
                    <option value="Mobil Uygulama">Mobil Uygulama</option>
                    <option value="E-Ticaret">E-Ticaret</option>
                    <option value="SEO & Pazarlama">SEO & Pazarlama</option>
                    <option value="Destek">Teknik Destek</option>
                    <option value="Diğer">Diğer</option>
                  </select>
                  <label for="subject">Konu</label>
                  <div class="invalid-feedback">Lütfen bir konu seçin.</div>
                </div>
              </div>
              <div class="col-12">
                <div class="form-floating mb-3">
                  <textarea class="form-control" id="message" name="message" placeholder="Mesajınız" style="height: 150px" required></textarea>
                  <label for="message">Mesajınız</label>
                  <div class="invalid-feedback">Lütfen mesajınızı girin.</div>
                </div>
              </div>
              <div class="col-12 mb-3">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" id="privacy" required>
                  <label class="form-check-label" for="privacy">
                    <a href="/privacy" class="text-decoration-underline">Gizlilik Politikası</a>'nı okudum ve kabul ediyorum.
                  </label>
                  <div class="invalid-feedback">
                    Devam etmek için gizlilik politikasını kabul etmelisiniz.
                  </div>
                </div>
              </div>
              <div class="col-12">
                <button type="submit" class="btn btn-primary btn-lg rounded-pill px-5">Gönder</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

